{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@config/*": ["./src/config/*"],
      "@modules/*": ["./src/modules/*"],
      "@repositories/*": ["src/repositories/*"]
    }
  },
  "include": ["/**/*.ts", ".env", "src/**/*.json", "src"],
  "exclude": ["node_modules", "data", "prisma"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }

  /* "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext",
    }
  } */
}
