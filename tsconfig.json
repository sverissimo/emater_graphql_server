{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "outDir": "dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["/**/*.ts", ".env", "src/**/*.json"],
  "exclude": ["node_modules", "data", "prisma"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
  /* "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext",
    }
  } */
}
